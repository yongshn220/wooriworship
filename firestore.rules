rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /teams/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /notices/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /song_comments/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /songs/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /songs_m/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /music_sheets/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /tags/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /worships/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /worships_m/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /invitations/{document=**} {
    	allow read, write: if isAuthenticated();
    }
    match /account_settings/{document=**} {
    	allow read, write: if isAuthenticated();
    }

    function isAuthenticated() {
    	return request.auth != null;
    }
  }
}